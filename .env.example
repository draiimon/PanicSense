# Database connection (Neon PostgreSQL)
DATABASE_URL=postgres://username:password@host:port/database_name
DB_SSL_REQUIRED=true  # Keep true for Neon PostgreSQL

# PostgreSQL connection details (automatically populated by Replit)
PGUSER=${PGUSER}
PGPASSWORD=${PGPASSWORD}
PGDATABASE=${PGDATABASE}
PGPORT=${PGPORT}
PGHOST=${PGHOST}

# Server configuration
PORT=5000
NODE_ENV=development
HOST=0.0.0.0
TZ=Asia/Manila

# Python configuration
PYTHON_PATH=python3
PYTHON_SERVICE_ENABLED=true
ENABLE_SOCIAL_SCRAPER=false

# Runtime environment 
RUNTIME_ENV=replit

# Session security (generate a random secure string)
SESSION_SECRET=replace_with_random_secure_string

# Debug settings
DEBUG_MODE=true  # Set to false in production
VERBOSE_LOGGING=true  # Set to false in production

# Optional API keys
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here