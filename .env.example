# Database connection
DATABASE_URL=postgres://username:password@host:port/database_name
DB_SSL_REQUIRED=true  # Set to false for local development

# PostgreSQL connection details (explicitly set for local development)
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=panicsense
PGPORT=5432
PGHOST=localhost

# Server configuration
PORT=5000
NODE_ENV=development  # Use 'production' for deployment
HOST=0.0.0.0
TZ=Asia/Manila

# Python configuration
PYTHON_PATH=python3  # Use '/venv/bin/python3' for Render
PYTHON_SERVICE_ENABLED=true
ENABLE_SOCIAL_SCRAPER=true

# Runtime environment 
RUNTIME_ENV=local  # Use 'render' for Render deployment

# Session security (generate a random secure string)
SESSION_SECRET=replace_with_random_secure_string

# Social media scraper SSL verification (disable for local development)
DISABLE_SSL_VERIFY=true  # Set to false in production for better security

# Debug settings
DEBUG_MODE=true  # Set to false in production
VERBOSE_LOGGING=true  # Set to false in production

# Optional API keys
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here