modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "JavaScript Runner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_hello_world"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PanicSense"

[[workflows.workflow]]
name = "JavaScript Runner"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node hello-world.js"

[[workflows.workflow]]
name = "run_hello_world"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node hello-world.js"

[[workflows.workflow]]
name = "PanicSense"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd PanicSense && npm run dev"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "node hello-world.js"]

[[ports]]
localPort = 5000
externalPort = 80
